[color]
  status = auto
  branch = auto
  interactive = auto
  diff = auto
[core]
  editor = vim
  excludesfile = /Users/michael/.gitignore_global
  quotepath = false
[heroku]
  account = ldc
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[alias]
  cc = commit
  ss = status
  co = checkout
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  logg = log --graph --decorate --abbrev-commit
  r = remote
  rv = remote -v
  p = push
  b = branch
  kdiff = difftool -y -t Kaleidoscope
  lg = log --graph --pretty=format:'%C(magenta)%h%Creset -%C(bold green)%d%Creset %C(white)%s â€¢ %C(bold blue)(%cr)%Creset %C(yellow)<%an>%Creset' --abbrev-commit --date=relative
  lgo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lgs = log --graph --pretty=format:'%C(red)%C(black reverse magenta) %h %Creset%C(red)%d%Creset %C(yellow)%cr %C(bold blue)<%an>%Creset%C(bold white)%n%Creset          %s%n' --abbrev-commit --date=relative
[mergetool]
  keepBackup = true
[push]
  default = simple
